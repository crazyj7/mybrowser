<Window x:Class="WpfBrowser.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About WPF Browser" 
        Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="WPF Browser" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Version 1.0" 
                       FontSize="14" 
                       Margin="0,10,0,20" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Copyright Â© 2024" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Made by crazyj7@gmail.com" 
                       HorizontalAlignment="Center" 
                       Margin="0,10"/>
            <TextBlock Text="Press ESC or Enter to close" 
                       FontStyle="Italic"
                       Foreground="Gray"
                       HorizontalAlignment="Center" 
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window> 